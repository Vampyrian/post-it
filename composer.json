{
    "name": "vampyrian/post-it",
    "description": "postit.lt integration",
    "keywords": [
        "Vampyrian",
        "post-it"
    ],
    "homepage": "https://github.com/vampyrian/post-it",
    "license": "MIT",
    "authors": [
        {
            "name": "zilvinasmacius",
            "email": "zilvinas.macius@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2",
        "friendsofphp/php-cs-fixer": "^3.21.1",
    },
    "autoload": {
        "psr-4": {
            "Vampyrian\\PostIt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vampyrian\\PostIt\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {

            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
